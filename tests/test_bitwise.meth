import "std/io.meth";

export function main() : int32 {
    var a : int32 = 5; // 0101
    var b : int32 = 3; // 0011

    // Bitwise AND
    var and_res : int32 = a & b; // 0001 = 1
    if (and_res != 1) { return 1; }

    // Bitwise OR
    var or_res : int32 = a | b; // 0111 = 7
    if (or_res != 7) { return 2; }

    // Bitwise XOR
    var xor_res : int32 = a ^ b; // 0110 = 6
    if (xor_res != 6) { return 3; }

    // Left Shift
    var lsh_res : int32 = a << 1; // 1010 = 10
    if (lsh_res != 10) { return 4; }

    // Right Shift
    var rsh_res : int32 = a >> 1; // 0010 = 2
    if (rsh_res != 2) { return 5; }

    // Bitwise NOT
    var c : int32 = 1;
    var not_res : int32 = ~c; 
    if (not_res != -2) { return 6; } // In 64-bit two's complement, ~1 = -2

    // print("Bitwise Operators OK\n");
    return 0;
}
