// Methlang standard library: Math

// C runtime externs
export extern function abs(x: int32) -> int32 = "abs";

// Integer minimum
export function min(a: int64, b: int64) -> int64 {
  if (a < b) {
    return a;
  }
  return b;
}

// Integer maximum
export function max(a: int64, b: int64) -> int64 {
  if (a > b) {
    return a;
  }
  return b;
}

// Integer clamping
export function clamp(value: int64, lo: int64, hi: int64) -> int64 {
  if (value < lo) {
    return lo;
  }
  if (value > hi) {
    return hi;
  }
  return value;
}
