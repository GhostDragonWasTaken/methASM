{
  "name": "masm-syntax",
  "displayName": "MethASM Syntax Highlighting",
  "description": "Syntax highlighting, folding, editor support, and basic linting for MethASM (.masm) files",
  "version": "0.4.0",
  "publisher": "methasm",
  "engines": { "vscode": "^1.74.0" },
  "categories": ["Programming Languages"],
  "activationEvents": ["onLanguage:masm"],
  "main": "extension.js",
  "contributes": {
    "languages": [
      {
        "id": "masm",
        "aliases": ["MethASM", "masm"],
        "extensions": [".masm"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/masmicon.svg",
          "dark": "./icons/masmicon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "masm",
        "scopeName": "source.masm",
        "path": "./syntaxes/masm.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "MethASM",
      "properties": {
        "masm.linter.compilerEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Run the MethASM compiler for semantic diagnostics (type errors, scope, etc.)"
        },
        "masm.linter.compilerPath": {
          "type": "string",
          "default": "",
          "description": "Path to methasm executable (relative to workspace or absolute)"
        },
        "masm.linter.stdlibPath": {
          "type": "string",
          "default": "",
          "description": "Path to stdlib directory"
        }
      }
    }
  }
}
