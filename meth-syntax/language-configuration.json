{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "wordPattern": "(-?\\b[0-9]+\\b)|(0[xX][0-9a-fA-F]+)|(0[bB][01]+)|([a-zA-Z_][a-zA-Z0-9_]*)",
  "folding": {
    "markers": {
      "start": "\\{\\s*(//.*)?$",
      "end": "^\\s*\\}"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*\\{[^}\"]*$|^.*\\([^)\"]*$",
    "decreaseIndentPattern": "^\\s*\\}|^\\s*\\)"
  }
}
